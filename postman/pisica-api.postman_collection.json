{
  "info": {
    "name": "Pisica API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection covering all Pisica CRUD and query endpoints. Configure the {{baseUrl}} variable (e.g. http://localhost:8080)."
  },
  "item": [
    {
      "name": "Get All Pisici",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/pisici?page={{page}}&size={{size}}&sort={{sort}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"},
            {"key": "sort", "value": "{{sort}}"}
          ]
        }
      }
    },
    {
      "name": "Create Pisica",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rasa\": \"Siamese\",\n  \"varsta\": 2,\n  \"nume\": \"Luna\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/pisici/add",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "add"]
        }
      }
    },
    {
      "name": "Update Pisica by Name",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rasa\": \"British Shorthair\",\n  \"varsta\": 5,\n  \"nume\": \"Mira\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/pisici/{{currentName}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "{{currentName}}"]
        }
      }
    },
    {
      "name": "Delete Pisica by Name",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/pisici/delete/{{nume}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "delete", "{{nume}}"]
        }
      }
    },
    {
      "name": "Get Pisici Older Than",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/older-than/{{varstaMinima}}?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "older-than", "{{varstaMinima}}"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Get Unique Rase",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/rase/unice?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "rase", "unice"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Find Pisici by Varsta Range",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/varsta?min={{varstaMin}}&max={{varstaMax}}&page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "varsta"],
          "query": [
            {"key": "min", "value": "{{varstaMin}}"},
            {"key": "max", "value": "{{varstaMax}}"},
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Get Pisici Ordered by Varsta",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/ordered-by-varsta?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "ordered-by-varsta"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Get by Rasa Ordered by Varsta",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/rasa/{{rasa}}/ordered-by-varsta?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "rasa", "{{rasa}}", "ordered-by-varsta"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Top 3 Youngest",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/top/tinere",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "top", "tinere"]
        }
      }
    },
    {
      "name": "Search by Name Prefix",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/nume/incepe-cu/{{prefix}}?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "nume", "incepe-cu", "{{prefix}}"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Find by Exact Varsta",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/varsta/{{varstaExacta}}?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "varsta", "{{varstaExacta}}"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    },
    {
      "name": "Top 5 Oldest",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/top/batrane",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "top", "batrane"]
        }
      }
    },
    {
      "name": "Average Age by Rasa",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/rase/varsta-medie?page={{page}}&size={{size}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "rase", "varsta-medie"],
          "query": [
            {"key": "page", "value": "{{page}}"},
            {"key": "size", "value": "{{size}}"}
          ]
        }
      }
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080"},
    {"key": "page", "value": "0"},
    {"key": "size", "value": "10"},
    {"key": "sort", "value": "id,asc"},
    {"key": "currentName", "value": "Luna"},
    {"key": "nume", "value": "Luna"},
    {"key": "varstaMinima", "value": "5"},
    {"key": "varstaMin", "value": "1"},
    {"key": "varstaMax", "value": "8"},
    {"key": "rasa", "value": "Siamese"},
    {"key": "prefix", "value": "Lu"},
    {"key": "varstaExacta", "value": "3"}
  ]
}
