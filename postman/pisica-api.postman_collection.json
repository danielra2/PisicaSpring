{
  "info": {
    "name": "Pisica API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection covering all Pisica CRUD and query endpoints. Configure the {{baseUrl}} variable (e.g. http://localhost:8080)."
  },
  "item": [
    {
      "name": "Get All Pisici",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/pisici",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici"]
        }
      }
    },
    {
      "name": "Create Pisica",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rasa\": \"Siamese\",\n  \"varsta\": 2,\n  \"nume\": \"Luna\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/pisici",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici"]
        }
      }
    },
    {
      "name": "Update Pisica by Name",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rasa\": \"British Shorthair\",\n  \"varsta\": 5,\n  \"nume\": \"Mira\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/pisici/{currentName}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", ":currentName"],
          "variable": [
            {"key": "currentName", "value": "Luna"}
          ]
        }
      }
    },
    {
      "name": "Delete Pisica by Name",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/pisici/{nume}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", ":nume"],
          "variable": [
            {"key": "nume", "value": "Luna"}
          ]
        }
      }
    },
    {
      "name": "Get Pisici Older Than",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/older-than/5",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "older-than", "5"]
        }
      }
    },
    {
      "name": "Get Unique Rase",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/rase/unice",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "rase", "unice"]
        }
      }
    },
    {
      "name": "Find Pisici by Varsta Range",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/varsta?min=1&max=8",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "varsta"],
          "query": [
            {"key": "min", "value": "1"},
            {"key": "max", "value": "8"}
          ]
        }
      }
    },
    {
      "name": "Get Pisici Ordered by Varsta",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/ordered-by-varsta",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "ordered-by-varsta"]
        }
      }
    },
    {
      "name": "Get by Rasa Ordered by Varsta",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/rasa/{rasa}/ordered-by-varsta",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "rasa", ":rasa", "ordered-by-varsta"],
          "variable": [
            {"key": "rasa", "value": "Siamese"}
          ]
        }
      }
    },
    {
      "name": "Top 3 Youngest",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/top/tinere",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "top", "tinere"]
        }
      }
    },
    {
      "name": "Search by Name Prefix",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/nume/incepe-cu/{prefix}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "nume", "incepe-cu", ":prefix"],
          "variable": [
            {"key": "prefix", "value": "Lu"}
          ]
        }
      }
    },
    {
      "name": "Find by Exact Varsta",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/varsta/{varstaExacta}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "varsta", ":varstaExacta"],
          "variable": [
            {"key": "varstaExacta", "value": "3"}
          ]
        }
      }
    },
    {
      "name": "Top 5 Oldest",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/top/batrane",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "top", "batrane"]
        }
      }
    },
    {
      "name": "Average Age by Rasa",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pisici/rase/varsta-medie",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pisici", "rase", "varsta-medie"]
        }
      }
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080"}
  ]
}
